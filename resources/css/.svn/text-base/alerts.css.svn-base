.mask{
    position: absolute;
    display: block;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background: rgba(0,0,0,0.2);
}

.alert-container{
    position: absolute;
    padding: 10px;
    width: 250px;
    top: 250px;
    left: 50%;
    margin-left: -125px;
    background:  #ffffff;
    border-radius: 4px;
    border: 1px solid #eaeaea;
    box-shadow: 0 0 6px rgba(0,0,0,0.6);
    text-align: center;
}

.alert-container span.message{
    text-align: left;
    display: block;
    margin-bottom: 4px;
}

.alert-container span.button.close{
    width: 50px;
    display: block;
    margin: 0 auto;
}